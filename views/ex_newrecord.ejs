        <form method="POST">
        <div class='form-group'>
            <div class='form-row'>
                <div class="form-group col-2">
                    <label for="year">年</label> 
                    <input type="text" class='form-control' name='year' id='year' >
                </div>
                <div class="form-group col-2">
                    <label for="month">月</label> 
                    <input type="text" class='form-control' name='month' id='month'>
                </div>
                <div class="form-group col-2">
                    <label for="day">日</label> 
                    <input type="text" class='form-control' name='day' id='day'>
                </div>
                <div class="form-group col-4">
                    <label for='branch_no'>No</label> 
                    <input type="text" class='form-control' name='branch_no'  id='branch_no' value="<%- branch_no2 %>" >
                    <!--<input type="datetime-local" class='form-control' name='date'  id='date' value="" required>-->  
                </div>
            </div>
        </div>
        <div class='form-group'>
            <div class='form-row'>
                <div class="form-group col-3">
                    <label for='code_name'>勘定科目</label> <br>
                    <select id='code_name' name='code_name' class='form-control' value="<%- code_name %>">
                        <option value="0">消耗品費</option>
                        <option value="1">新聞図書費</option>
                        <option value="2">会議費</option>
                        <option value="3">交際費</option>
                        <option value="4">その他</option>
                    </select>
                </div>
                <div class="form-group col-3">
                    <label for='payee'>支払先</label>
                    <span class="c-tooltip form-inline" data-tooltip="サンプル文">❔</span>
                    <input type="text" class='form-control' name='payee' id='payee' placeholder="必須" value="<%- payee %>">
                </div>
            </div>
        </div>
        <div class='form-group'>
            <div class='form-row'>
                <div class="form-group col-3">
                <label for='summary'>摘要</label>
                <span class="c-tooltip form-inline" data-tooltip="書籍購入制度利用の場合は『書籍代』と入力ください。">❔</span>
                <input type="text" class='form-control form-inline' name='summary' id='summary'  placeholder="必須" value="<%- summary %>">
            </div>
            <div class="form-group col-3">   
            <span><label for='amount'>金額　</label></span>
            <input type="text" id='amount' name='amount' class="form-control" value="<%- amount%>">
        </div>
    </div> 
</div> 
        <div class='form-group form-inline'>
        <div class='form-group form-inline'>
            <label for='job_no'>ジョブコード</label> 
                <div class="form-group col-3">
                <input type="text" class='form-control' id='job_no' name='job_no' value="<%= job_no %> ">
                </div>
        </div>
        <div class='form-group form-inline'>
            <label for='job_name'>ジョブ名</label> 
                <div class="form-group col-3">
                <input type="text" class='form-control' id='job_name' name='job_name' value="<%= job_name %>">
                </div>
        </div>
        <input type="submit" id="btn-return" value="ジョブ検索" class="btn btn-primary" name="ex_jobsearch_to" formaction="/ex_newrecord">
        <input type="hidden"  id="job_manager" name="job_manager"  value="<%= job_manager %>">
        <div class='form-group form-inline'>
            <div class='form-group form-inline'>
                <label for="job_manager_name">ＪＭ　　</label>
                    <select name='job_manager_name' id='job_manager_name' class='form-control' value="<%= job_manager_name %>">
                        <option value=0>---------------</option>
                        <option value=1>Aさん</option>
                        <option value=2>Bさん</option>
                    </select>
            </div>
            <div class='form-group form-inline'>
                <div class='form-group form-inline'>
                    <label for='claim_flag'>　　　　　顧客に請求する<input name='claim_flag' type="hidden" value='0'>
                    <input type="checkbox" class='form-control' id='claim_flag' name='claim_flag' value='1'></label>
                </div>
                <div class='form-group form-inline'>
                    <label for='charge_flag'>　　　　　ジョブにチャージ<input name='charge_flag' type='hidden' value='0'>
                    <input type='checkbox' class='form-control' id='charge_flag' name='charge_flag' value='1'></label>
                </div>
                </div>
        </div>
        <div class='form-group form-inline'>
            <div class='form-group form-inline'>
                <label for='ref_no'>領収書番号</label> 
                <div class="col col-md-9 col-sm-8">
                <input type="text" class='form-control' id='ref_no' name='ref_no'>
                </div>
            </div>
            <div class='form-group form-inline'>
                <label for='remarks'>備考</label> 
                <div class="col col-md-9 col-sm-8">
                <input type="text" class='form-control' id='remarks' name='remarks'>
                </div>
            </div>
        <div>
            <input type="submit" id="btn-return" value="戻る" class="btn btn-primary" onclick="frameClick();"　 formaction="/ex_newrecord">
            <input type="submit" id="save" value="保存" class="btn btn-primary" name='save' formaction="/ex_newrecord">
        </div>
    </form>
    <input type="hidden" name="id" value="<%- branch_no2 %>">
