  <body class= 'container p-3'>
    <h1 class = "display-4"><%= title %></h1>
    <!-- <form method="POST" action="/te_newrecord"> -->
        <form method="POST"> 
        <div class='form-group'>
            <div class='form-row'>
                <div class="form-group col-2">
                    <label for='year'>年<br> ※yyyy</label> 
                    <input type="text" class='form-control' name='year' id='year' >
                </div>
                <div class="form-group col-2">
                    <label for='month'>月<br> ※mm</label> 
                    <input type="text" class='form-control' name='month' id='month' >
                </div>
                <div class="form-group col-2">
                    <label for='day'>日<br>  ※dd</label>
                    <input type="text" class='form-control' name='day' id='day' >
                </div>
                <div class="form-group col-2">
                    <label for='time'>時刻<br> ※hhmm</label> 
                    <input type="text" class='form-control' name='time'  id='time' >
                    <!--<input type="datetime-local" class='form-control' name='date'  id='date' value="" required>-->  
                </div>
                <div class="form-group col-4">
                    <label for='branch_no'>No</label> 
                    <input type="text" class='form-control' name='branch_no'  id='branch_no' value="<%- branch_no2 %>" >
                    <!--<input type="datetime-local" class='form-control' name='date'  id='date' value="" required>-->  
                </div>
            </div>
        </div>
        <div class='form-group'>
            <div class='form-row'>
                <div class="form-group col-4">
                    <label for='trans_from'>出発地</label> 
                    <input type="text" class='form-control' name='trans_from' id='trans_from' value="<%- trans_from %>" placeholder="必須">
                </div>
                <div class="form-group col-4">
                    <label for='trans_to'>目的地</label> 
                    <input type="text" class='form-control' name='trans_to' id='trans_to' value="<%- trans_to %>"  placeholder="必須">
                </div>
            </div>
            <div class="form-group">
                <label for='route'>経由地</label>
                <input type="text" class='form-control' name='trans_waypoint' id='trans_waypoint' value="<%- trans_waypoint %>" placeholder="省略可">
            </div>
            <input type="submit" id='search' value="検索" class="btn btn-danger" name='search'　 formaction="/result">
            <!--<button onclick="searchPrice()" class="btn btn-primary">調べよう</button>-->
        </div>
        <div class='form-group form-inline'>
        <div class='form-group form-inline'>
            <label for='amount'>運賃</label> 
            <div class="col col-md-9 col-sm-8">
            <input type="text" id='amount' name='amount' value="<%- amount %>"class="form-control" >
            </div>
        </div>
        <div class='form-group form-inline'>
        <div class='form-group form-inline'>
            <label for='count'>回数</label> 
                <div class="col col-md-9 col-sm-8">
                <input type="number" class='form-control' value='1' min='1' id='count' name='count'>
                </div>
        </div>
        <div class='form-group form-inline'>
            <label for='trans_type'>手段</label> <br>
            <div class="col col-md-9 col-sm-8">
            <select id='trans_type' name='trans_type' class='form-control'>
                <option value="1">電車</option>
                <option value="2">バス</option>
                <option value="3">タクシー</option>
                <option value="4">その他</option>
            </select>
            </div>
        </div>
        </div>
    </div>
    <div class='form-group form-inline'>
    <div class='form-group form-inline'>
        <label for='job_no'>ジョブコード</label> 
            <div class="col-6">
            <input type="text" class='form-control' id='job_no' name='job_no'  value="<%= job_no %> ">
            </div>
    </div>
    <div class='form-group form-inline'>
        <label for='job_name'>ジョブ名</label> 
            <div class="col-6">
            <input type="text" class='form-control' id='job_name' name='job_name' value="<%= job_name %>">
            </div>
    </div>
    <input type="hidden"  id="job_manager" name="job_manager"  value="<%= job_manager %>">
    <input type="submit" id="btn-jobsearch" value="ジョブ検索" class="btn btn-primary" name="te_jobsearch_to" formaction="/te_newrecord">
    </div>
    <div class='form-group form-inline'>
    <div class='form-group form-inline'>
        <label for="job_manager_name">ＪＭ　　　　　</label>
        <select name='job_manager_name' id='job_manager_name' class='form-control' value="<%= job_manager_name %>">
            <option value=0>---------------</option>
            <option value=1>Aさん</option>
            <option value=2>Bさん</option>
        </select>
    </div>
        <div class='form-group form-inline'>
        <div class='form-group form-inline'>
            <label for='claim_flag'>　　　　　顧客に請求する<input name='claim_flag' type="hidden" value=0>
            <input type="checkbox" class='form-control' id='claim_flag' name='claim_flag' value=1></label>
        </div>
        <div class='form-group form-inline'>
            <label for='charge_flag'>　　　　　ジョブにチャージ<input name='charge_flag' type='hidden' value=0>
            <input type='checkbox' class='form-control' id='charge_flag' name='charge_flag' value=1></label>
        </div>
        </div>
    </div>
        <div class='form-group form-inline'>
        <div class='form-group form-inline'>
            <label for='ref_no'>領収書番号</label> 
            <div class="col col-md-9 col-sm-8">
            <input type="text" class='form-control' id='ref_no' name='ref_no'>
            </div>
        </div>
        <div class='form-group form-inline'>
            <label for='remarks'>備考</label> 
            <div class="col col-md-9 col-sm-8">
            <input type="text" class='form-control' id='remarks' name='remarks'>
            </div>
        </div>
        <div>
            <input type="submit" id="btn-return" value="戻る" class="btn btn-primary" onclick="frameClick();"　 formaction="/te_newrecord">
            <input type="submit" id="save" value="保存" class="btn btn-primary" name='save' formaction="/te_newrecord">
        </div>
        <input type="hidden" name="id" value="<%- branch_no2 %>">
    </form>
