<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=yes">
    <title><%= title %></title>
    <link rel='stylesheet' 
    href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class= 'container p-3'>
    <h1 class = "display-4"><%= title %></h1>
    <form method="POST">
        <div class='form-group'>
            <div class='form-row'>

                <div class="form-group col-2.5">
                <label for='year'>年 ※yyyy</label>
                <input type="text" class='form-control' name='year' id='year' value="<%- year %>" required>
                </div>
                <div class="form-group col-2.5">
                <label for='month'>月 ※mm</label> 
                <input type="text" class='form-control' name='month' id='month' value="<%- month %>" required>
                </div>
                <div class="form-group col-2.5">
                <label for='day'>日 ※dd</label>
                <input type="text" class='form-control' name='day' id='day' value="<%- day %>" required>

                <div class="form-group col-4">
                    <label for='branch_no'>No</label> 
                    <input type="text" class='form-control' name='branch_no'  id='branch_no' value="<%- branch_no2 %>" >
                    <!--<input type="datetime-local" class='form-control' name='date'  id='date' value="" required>-->  
                </div>
            </div>
        </div>
        <div class='form-group'>
            <div class='form-row'>
                <div class="form-group col-3">
                    <label for='code_name'>勘定科目</label> <br>
                    <select id='code_name' name='code_name' class='form-control'　required>
                        <option value="0">消耗品費</option>
                        <option value="1">新聞図書費</option>
                        <option value="2">会議費</option>
                        <option value="3">交際費</option>
                        <option value="4">その他</option>
                    </select>
                </div>
                <div class="form-group col-3">
                    <label for='payee'>支払先</label>
                    <span class="c-tooltip form-inline" data-tooltip="サンプル文">❔</span>
                    <input type="text" class='form-control' name='payee' id='payee' value="<%- payee %>" required placeholder="必須">
                </div>
                <div class="form-group col-2.5">
                    <label for='summary'>摘要</label>
                    <span class="c-tooltip form-inline" data-tooltip="書籍購入制度利用の場合は『書籍代』と入力ください。">❔</span>
                    <input type="text" class='form-control form-inline' name='summary' id='summary' value='<%- summary %>' required placeholder="必須">
                </div>
            </div>
        </div>
        <div class='form-group form-inline'>
            <div class="form-group col-3">   
            <label for='amount'>金額</label>
            <input type="text" id='amount' name='amount' class="form-control" <%- amount %>>
        </div>
    </div> 
</div> 
        <div class='form-group form-inline'>
        <div class='form-group form-inline'>
            <label for='job_no'>ジョブコード</label> 

                <div class="col-6">
                <input type="text" class='form-control' id='job_no' name='job_no' value='<%- job_no %>' >
                </div>
        </div>
        <div class='form-group form-inline'>
            <label for='job_name'>ジョブ名</label> 
                <div class="form-group col-3">
                <input type="text" class='form-control' id='job_name' name='job_name'>
                </div>
        </div>
        <input type="submit" id="btn-return" value="ジョブ検索" class="btn btn-primary" onclick="frameClick();">
        </div>
        <div class='form-group form-inline'>
            <div class='form-group form-inline'>
                <label for="job_manager_name">ＪＭ　　</label>
                    <select name='job_manager_name' id='job_manager_name' class='form-control'>
                        <option value=0>---------------</option>
                        <option value=1>Aさん</option>
                        <option value=2>Bさん</option>
                    </select>
            </div>
            <div class='form-group form-inline'>
                <div class='form-group form-inline'>
                    <label for='claim_flag'>　　　　　顧客に請求する<input name='claim_flag' type="hidden" value='0'>
                    <input type="checkbox" class='form-control' id='claim_flag' name='claim_flag' value='1'></label>
                </div>
                <div class='form-group form-inline'>
                    <label for='charge_flag'>　　　　　ジョブにチャージ<input name='charge_flag' type='hidden' value='0'>
                    <input type='checkbox' class='form-control' id='charge_flag' name='charge_flag' value='1'></label>
                </div>
                </div>
        </div>
        <div class='form-group form-inline'>
            <div class='form-group form-inline'>
                <label for='ref_no'>領収書番号</label> 
                <div class="col col-md-9 col-sm-8">
                <input type="text" class='form-control' id='ref_no' name='ref_no' value="<%- ref_no %>">
                </div>
            </div>
            <div class='form-group form-inline'>
                <label for='remarks'>備考</label> 
                <div class="col col-md-9 col-sm-8">
                <input type="text" class='form-control' id='remarks' name='remarks' value="<%- remarks %>">
                </div>
            </div>
            <div>
                <input type="submit" id="return" value="戻る" class="btn btn-primary" onclick="frameClick();"　 formaction="/ex_detail">
                <input type="submit" id="save" value="保存" class="btn btn-primary" name='save' formaction="/ex_detail">
                <input type="submit" id="delete" value="削除" class="btn btn-primary" name='delete' formaction="/ex_detail">
            </div>
    </form>

    <table class="table">
        <thead class="thead-light">
        <tr>
          <th>承認クラス</th>
          <th>承認フラグ</th>
          <th>コメント</th>
        </tr>
        </thead>
        <tbody>
            <td><%= app_class %> </td>
            <td><%= app_flag %> </td>
            <td><%= comment %> </td>
        </tbody>
    </table>
    <input type="hidden" name="id" value="<%- branch_no2 %>">

    <script type="text/javascript">

        'use strict'

        //戻るボタンでex_thismonthに遷移
        function frameClick() {
            document.location.href = 'http://localhost:3000/ex_thismonth';
        };

        //日付・時刻の初期値の設定
        var date = new Date();
        date.setDate(date.getDate());
        var year = date.getFullYear();
        var month = ("0"+(date.getMonth()+1)).slice(-2);
        var day = ("0"+date.getDate()).slice(-2);
        var hours = ("0"+date.getHours()).slice(-2);
        var minutes = ("0"+date.getMinutes()).slice(-2);
        console.log(date);
        document.getElementById("time").value=hours+minutes;
        document.getElementById("year").value=year;
        document.getElementById("month").value=month;
        document.getElementById("day").value=day;

        function jobClick() {
            document.location.href = 'http://localhost:3000/ex_thismonth';
        };
        
        val.onchange = function() {
            var val = document.getElementById('jm');
            if (val !== 0) {
            alert('本来とは別のJMが選択されています。再確認の上、変更願います。');
            }
        }
    </script>
  </body>
</html>